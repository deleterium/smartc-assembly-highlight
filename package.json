    "esbuild": "^0.14.39",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "jest": "^28.1.0",
    "ts-jest": "^28.0.2",
    "typescript": "^4.4.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deleterium/smartc-assembly-highlight.git"
  },
  "keywords": [
    "signum",
    "assembly",
    "syntax",
    "highlight"
