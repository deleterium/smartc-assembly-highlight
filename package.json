{
  "name": "smartc-assembly-highlight",
  "version": "1.1.0",
  "description": "Converts SmartC assembly source code into html with syntax highlighting",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "npx eslint src/*.ts",
    "build": "npx tsc && node esbuild.config.js",
