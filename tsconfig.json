{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "es2020",
    "sourceMap": false
  },
  "exclude": [
    "node_modules/**/*",
    "dist/**/*",
    "**/*.spec.ts",
  ]
}
